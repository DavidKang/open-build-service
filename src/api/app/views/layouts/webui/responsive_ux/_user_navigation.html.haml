.navbar-collapse.offcanvas-collapse.navbar-dark
  .nav.justify-content-end.py-2.px-3
    %button.navbar-toggler{ 'type': 'button', data: { toggle: 'offcanvas' }, aria: { expanded: 'false', label: 'Toggle navigation' } }
      %i.fas.fa-times
  .d-flex.flex-column
    = link_to(user_path(User.session!), id: 'link-to-user-home', class: 'menu-link') do
      = image_tag_for(User.session, size: 23, custom_class: 'rounded-circle bg-light mr-2')
      Profile
    - if User.session!.home_project
      = link_to(project_show_path(User.session!.home_project), class: 'menu-link') do
        %i.fas.fa-cubes.fa-lg.mr-2
        Your Home Project
    - else
      = link_to(new_project_path(name: User.session!.home_project_name), class: 'menu-link') do
        %i.fas.fa-cubes.fa-lg.mr-2
        Create Your Home Project
    = link_to(projects_path, class: 'menu-link') do
      %i.fas.fa-list.fa-lg.mr-2
      All Projects
    = link_to(monitor_path, class: 'menu-link') do
      %i.fas.fa-heartbeat.fa-lg.mr-2
      Status Monitor
    - if User.admin_session?
      = link_to(configuration_path, class: 'menu-link', title: 'Configure this instance') do
        %i.fas.fa-cogs.mr-2
        Configuration
    = link_to(session_path, method: :delete, id: 'logout-link', class: 'menu-link') do
      %i.fas.fa-sign-out-alt.fa-lg.mr-2
      Logout
