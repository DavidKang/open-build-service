%nav.navbar.fixed-bottom.navbar-dark.bg-dark#bottom_navigation
  %ul.nav.justify-content-center.w-100.nav-fill
    %li.nav-item
      = link_to(home_project_link, class: 'btn btn-dark nav-link', alt: "Home project") do
        %i.fas.fa-warehouse.fa-lg
    %li.nav-item
      - tasks = User.session!.tasks
      = link_to(my_tasks_path, class: 'btn btn-dark nav-link', alt: "Tasks") do
        %i.fas.fa-tasks.fa-lg
        - if tasks.positive?
          .badge.badge-primary= tasks
    %li.nav-item
      = link_to("#", class: 'btn btn-dark nav-link', alt: "Watchlist", data: { toggle: 'watchlist' }) do
        %i.fas.fa-bookmark.fa-lg

  .navbar-collapse.watchlist-collapse
    %ul.navbar-nav.ml-auto.text-nowrap
      = render partial: "layouts/#{responsive_namespace}/watchlist"

:javascript
  $(function () {
    $('[data-toggle="watchlist"]').on('click', function () {
      $('.watchlist-collapse').toggleClass('open');
    })
  })
