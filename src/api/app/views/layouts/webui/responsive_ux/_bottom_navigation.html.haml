%nav.navbar.fixed-bottom.navbar-dark.bg-dark.border-top#bottom_navigation
  %ul.nav.justify-content-center.w-100.nav-fill
    %li.nav-item
      = link_to(home_project_link, class: 'btn btn-dark nav-link', alt: "Home project") do
        %i.fas.fa-warehouse.fa-lg
    %li.nav-item
      - tasks = User.session!.tasks
      = link_to(my_tasks_path, class: 'btn btn-dark nav-link', alt: "Tasks") do
        %i.fas.fa-tasks.fa-lg
        - if tasks.positive?
          .badge.badge-primary= tasks
    %li.nav-item
      = link_to "#", class: 'btn btn-dark nav-link', alt: "Watchlist" do
        %i.fas.fa-bookmark.fa-lg
